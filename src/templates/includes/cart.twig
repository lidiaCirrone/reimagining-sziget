<dialog id="cart-modal">
	<div class="flex row ais jcsb">
		<h2 id="cart-title" class="mt0">Cart</h2>
		<a href="#" class="icon close">
			<i class="fa-solid fa-xmark"></i>
		</a>
	</div>
	<div id="cart-content">
		<span id="cart-label" class="bold"></span>
		<span id="cart-price"></span>
		<form name="user-data">
			<div class="input-container">
				<label for="first-name">First name</label><input type="text" name="first-name" id="first-name" placeholder="First name..." required minlength="3">
			</div>
			<div class="input-container">
				<label for="last-name">Last name</label><input type="text" name="last-name" id="last-name" placeholder="Last name..." required minlength="3">
			</div>
			<div class="input-container">
				<label for="birthdate">Birthdate</label><input type="date" name="birthdate" id="birthdate" required min="1923-01-01" max="2005-12-31">
			</div>
			<input type="submit" value="Go to checkout" class="button" id="cart-send">
		</form>
	</div>
</dialog>
